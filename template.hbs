<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{basics.name}} - CV</title>
    <style>@import
      url("https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@400;600;700&display=swap");
      body { font-family: "Crimson Pro", serif; font-size: 11pt; line-height:
      1.2; color: #000000; background: rgb(255, 255, 255); width: 210mm;
      min-height: 297mm; margin: 0 auto; padding: 15mm 20mm; box-sizing:
      border-box; } .container { background: rgb(255, 255, 255); width: 100%;
      height: 100%; } /* Header Styles */ .header { text-align: center;
      margin-bottom: 8mm; } .header h1 { font-size: 18pt; font-weight: 700;
      margin-bottom: 2mm; } .header h2 { font-size: 14pt; font-weight: 600;
      margin-bottom: 4mm; } .contact-info { display: flex; justify-content:
      center; flex-wrap: wrap; gap: 8px; margin-bottom: 2mm; font-size: 10.5pt;
      padding-bottom: 4mm; /* Added padding for the line */ border-bottom: 1px
      solid #000; /* Line below contact info */ } .contact-info a { color:
      #000000; text-decoration: none; } /* Content Styles */ .summary {
      margin-bottom: 6mm; text-align: justify; } .section { margin-bottom: 6mm;
      page-break-inside: avoid; } .section-title { font-size: 13pt; font-weight:
      700; margin-bottom: 4mm; border-bottom: 1px solid #000; } /* Work
      Experience - Updated Layout */ .work-item { margin-bottom: 5mm; }
      .work-header { display: flex; justify-content: space-between;
      margin-bottom: 1mm; } .work-title { font-weight: 700; font-size: 11pt; }
      .work-date { font-style: italic; } .work-company { font-weight: 700;
      margin-bottom: 1mm; } .work-location { font-style: italic; }
      .work-highlights { padding-left: 4mm; list-style-type: disc; }
      .work-highlights li { margin-bottom: 1mm; } /* Skills Section */
      .skills-section { columns: 2; column-gap: 10mm; } .skill-item {
      break-inside: avoid; margin-bottom: 2mm; } .skill-title { font-weight:
      700; } .projects-section { columns: 1; column-gap: 10mm; } /* Languages */
      .language-table { width: 100%; table-layout: fixed; /* This enforces equal
      column widths */ border-collapse: collapse; } .language-table td {
      padding: 1mm 0; vertical-align: top; word-break: break-word; } /* Print
      Adjustments */ @media print { body { padding: 0 !important; } .section,
      .work-item, .skill-item { page-break-inside: avoid; } }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>{{basics.name}}</h1>
        <h2>{{basics.label}}</h2>
        <div class="contact-info">
          <span>{{basics.location.city}}, {{basics.location.country}}</span>
          |
          <span>{{basics.phone}}</span>
          |
          <span><a href="mailto:{{basics.email}}">{{basics.email}}</a></span>
          |
          {{#if basics.website}}<span><a
                href="{{basics.website}}"
                target="_blank"
              >My Portfolio</a></span>
            |{{/if}}
          {{#each basics.profiles}}
            <span><a
                href="{{url}}"
                target="_blank"
              >{{network}}</a></span>{{#unless @last}} | {{/unless}}
          {{/each}}
        </div>
      </div>

      <div class="summary">
        <p>{{basics.summary}}</p>
      </div>

      <div class="section">
        <h3 class="section-title">WORK EXPERIENCE</h3>
        {{#each work}}
          <div class="work-item">
            <div class="work-header">
              <div class="work-title">{{position}}</div>
              <div class="work-date">{{startDate}} â€“ {{endDate}}</div>
            </div>
            <div class="work-header">
              <div class="work-company">{{company}}</div>
              {{#if location}}<div
                  class="work-location"
                >{{location}}</div>{{/if}}
            </div>
            <ul class="work-highlights">
              {{#each highlights}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
          </div>
        {{/each}}
      </div>

      <div class="section">
        <h3 class="section-title">PROJECTS</h3>
        <div class="projects-section">
          {{#each projects}}
            <div class="skill-item">
              <div class="skill-title">{{name}}</div>
              <div>{{description}}</div>
              <ul class="work-highlights">
                {{#each highlights}}
                  <li>{{this}}</li>
                {{/each}}
              </ul>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="section">
        <h3 class="section-title">EDUCATION</h3>
        {{#each education}}
          <div class="education-item">
            <div class="work-title">{{studyType}} in {{area}}</div>
            <div class="work-details">
              <span><strong>{{institution}}</strong></span>
            </div>
          </div>
        {{/each}}
      </div>

      <div class="section">
        <h3 class="section-title">SKILLS</h3>
        <div class="skills-section">
          {{#each skills}}
            <div class="skill-item">
              <div class="skill-title">{{name}}</div>
              <div>{{level}}</div>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="section">
        <h3 class="section-title">LANGUAGES</h3>
        <table class="language-table">
          <tr>
            {{#each languages}}
              <td>
                <div class="skill-title">{{language}}</div>
                <div>{{fluency}}</div>
              </td>
            {{/each}}
          </tr>
        </table>
      </div>
      {{!-- 
      <div class="section">
        <h3 class="section-title">COURSES</h3>
        {{#each certificates}}
          <div class="certificate-item">
            <div class="certificate-title">{{name}}</div>
            <div class="certificate-details">
              <span>{{issuer}}</span>
              |
              <span><em>{{date}}</em></span>
              |
              <span>{{location}}</span>
            </div>
          </div>
        {{/each}}
      </div> --}}
    </div>
  </body>
</html>