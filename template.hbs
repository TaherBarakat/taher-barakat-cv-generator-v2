<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{basics.name}} - CV</title>
    <style>

      @import
      url("https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@400;600;700&display=swap");
      /* A4 Page Specifications */ @page { size: A4; margin: 10mm 12mm; /*
      Reduced from 15mm 20mm */ } body { font-family: "Crimson Pro", serif;
      font-size: 13px; /* Slightly smaller font */ line-height: 1.25; /* Tighter
      line spacing */ color: #000000; background: rgb(255, 255, 255); width:
      210mm; min-height: 297mm; margin: 0 auto; padding: 8mm 10mm; /* Reduced
      from 15mm 20mm */ box-sizing: border-box; } .container { width: 100%;
      height: 100%; } /* Header Styles */ .header { text-align: center;
      margin-bottom: 10mm; } .header h1 { font-size: 24pt; font-weight: 700;
      margin-bottom: 4px; } .header h2 { font-size: 14pt; font-weight: 600;
      margin-bottom: 8px; } .contact-info { display: flex; justify-content:
      center; flex-wrap: wrap; gap: 8px; margin-bottom: 4px; } .contact-info a {
      color: #000000; text-decoration: none; } /* Content Styles */ .summary {
      margin-bottom: 8mm; text-align: justify; } .section { margin-bottom: 8mm;
      page-break-inside: avoid; } .section-title { font-size: 12pt; font-weight:
      700; margin-bottom: 4mm; border-bottom: 1px solid #000; padding-bottom:
      2px; } /* Work Experience */ .work-item { margin-bottom: 6mm; }
      .work-title { font-weight: 700; font-size: 11pt; } .work-details {
      display: flex; justify-content: space-between; margin-bottom: 2mm;
      font-style: italic; } .work-highlights { padding-left: 5mm;
      list-style-type: disc; } .work-highlights li { margin-bottom: 1mm; } /*
      Skills Section */ .skills-section { columns: 2; column-gap: 10mm; }
      .skill-item { break-inside: avoid; margin-bottom: 3mm; } .skill-title {
      font-weight: 700; } /* Languages */ .language-table { width: 100%;
      border-collapse: collapse; } .language-table td { padding: 2mm 0;
      vertical-align: top; } /* Print Adjustments */ @media print { body {
      padding: 8mm 10mm; /* Matches screen */ width: 210mm; height: auto; }
      .section { page-break-inside: avoid; } .skill-item, .work-item {
      break-inside: avoid; } }

    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>{{basics.name}}</h1>
        <h2>{{basics.label}}</h2>
        <div class="contact-info">
          <span>{{basics.location.city}}, {{basics.location.country}}</span>
          |
          <span>{{basics.phone}}</span>
          |
          <span><a href="mailto:{{basics.email}}">{{basics.email}}</a></span>
          |
          {{#if basics.website}}<span><a
                href="{{basics.website}}"
                target="_blank"
              >my portfolio</a></span>
            |{{/if}}
          {{#each basics.profiles}}
            <span><a
                href="{{url}}"
                target="_blank"
              >{{network}}</a></span>{{#unless @last}} | {{/unless}}
          {{/each}}
        </div>
      </div>

      <div class="summary">
        <p>{{basics.summary}}</p>
      </div>

      <div class="section">
        <h3 class="section-title">WORK EXPERIENCE</h3>
        {{#each work}}
          <div class="work-item">
            <div class="work-title">{{position}}</div>
            <div class="work-details">
              <span>{{company}}</span>
              <span>{{startDate}} â€“ {{endDate}}</span>
            </div>
            {{#if location}}<div class="work-details">
                <span>{{location}}</span>
              </div>{{/if}}
            <ul class="work-highlights">
              {{#each highlights}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
          </div>
        {{/each}}
      </div>

      <div class="section">
        <h3 class="section-title">EDUCATION</h3>
        {{#each education}}
          <div class="education-item">
            <div class="work-title">{{studyType}} in {{area}}</div>
            <div class="work-details">
              <span>{{institution}}</span>
            </div>
          </div>
        {{/each}}
      </div>

      <div class="section">
        <h3 class="section-title">SKILLS</h3>
        <div class="skills-section">
          {{#each skills}}
            <div class="skill-item">
              <div class="skill-title">{{name}}</div>
              <div>{{level}}</div>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="section">
        <h3 class="section-title">LANGUAGES</h3>
        <table class="language-table">
          <tr>
            {{#each languages}}
              <td>
                <div class="skill-title">{{language}}</div>
                <div>{{fluency}}</div>
              </td>
            {{/each}}
          </tr>
        </table>
      </div>

      <div class="section">
        <h3 class="section-title">COURSES</h3>
        {{#each certificates}}
          <div class="certificate-item">
            <div class="certificate-title">{{name}}</div>
            <div class="certificate-details">
              <span>{{issuer}}</span>
              |
              <span>{{date}}</span>
              |
              <span>{{location}}</span>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </body>
</html>